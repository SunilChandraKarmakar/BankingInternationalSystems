@model CreateWithdrawAccountViewModel
@{
    ViewData["Title"] = "Withdraw Account";
}

<div class="row">
    <div class="col-md-12">
        <h5 class="text-center">Withdraw From Account</h5>
        <hr />
	</div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-controller="UserDashboard" asp-action="WithdrawAmmount">
                    <input type="hidden" asp-for="AccountId" />
                    <div class="form-group">
                        <label asp-for="Ammount" class="form-label">Withdraw Ammount</label>
                        <input type="number" asp-for="Ammount" class="form-control" min="1" />
                        <span asp-validation-for="Ammount" class="text-danger"></span>
					</div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-success" style="width:300px">Withdraw</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
